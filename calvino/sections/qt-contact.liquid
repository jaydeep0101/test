<style>
  .contact {
    background-image:url('{{section.settings.banner_bg_img | img_url: 'master'}}');
      background-size: cover;
      /*     background-position:center; */
      background-repeat:no-repeat;
      object-fit:cover;
      padding: 29px 0;
      }

  .single__contact {
    background-image:url('{{section.settings.contact_bg_img | img_url: 'master'}}');
      /*       background-size: cover; */
      /*       background-position:center; */
      background-repeat:no-repeat;
      object-fit:cover;
      padding: 65px 50px 65px 60px;
      text-align: center;
      width: 490px;
      height: 505px;
      display: flex;
      align-items: center;
      }

  .single__contact--caption h5 {
    font-size: 33px;
    font-weight: 700;
    color: #fff;
    text-transform: capitalize;
    margin-bottom: 30px;
    display: block;
    transition: all .2s ease-out 0s;
  }

  .single__contact--caption p {
    margin-bottom: 35px !important;
    color: #fff;

  }

  .single__contact--caption a {
    border: 1px solid #fff;
    color: #fff;
    background: none;
    padding: 15px 34px!important;
    cursor: pointer;
    display: inline-block;
    font-size: 18px;
    font-weight: 500;
    letter-spacing: 1px;
    position: relative;
    transition: color .4s linear;
    position: relative;
    overflow: hidden;
    border-radius: 30px;
    z-index: 1;
    text-decoration: none;
  }

  .single__contact--caption a {
    color: #fff;
  }

  .single__contact--caption a:hover {

    color: #ff4495;
  }
  .single__contact--caption a::before {
    border: 1px solid transparent;
    content: "";
    position: absolute;
    left: 0;
    top: 0;
    width: 101%;
    height: 101%;
    background: #fff;
    z-index: -1;
    transition: transform .5s;
    transition-timing-function: ease;
    transform-origin: 0 0;
    transition-timing-function: cubic-bezier(.5,1.6,.4,.7);
    transform: scaleY(0);
    border-radius: 0;
  }

  .single__contact--caption a:hover::before {
    transform: scaleY(1);
    border: 1px solid transparent;

  }
  @media(max-width: 767px) {
    .contact {
      padding: 50px 0;
    }
  }
  @media(max-width: 575px) { 
    .single__contact {
      padding: 15px;	 
      width: 300px;
      height: 405px;
      background: linear-gradient(to bottom,#ff4495 0%,#ff6d6d 100%,#7db9e8 100%);
    }

   
  }
</style>
<section class="">
  <div class="contact">
    <div class="container">
      <div class="row">
        <div class="offset-xl-6 offset-lg-5 col-xl-5 col-lg-7 col-md-9 col-sm-12 custom__padding--all">
          <div class="single__contact">
            <div class="single__contact--caption">
              <h5>{{section.settings.contact_title}}</h5>
              <p>{{section.settings.contact_description}}</p>
              <a href="#">{{section.settings.contact_button}}</a>
            </div>
          </div>
        </div>
      </div>
    </div>
   </div>
</section>
		  


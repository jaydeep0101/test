  {
    "name": "Qt Study",
    "settings": [
	{
			"type" : "text",
			"id" : "title",
			"label" : "title"
		},
        {
          "type" : "text",
          "id" : "sub_title",
          "label" : "sub title"
        }
],

"blocks":[
      {
         "name":"Qt Study",
         "type":"text",
         "settings":[
            {
               "type":"image_picker",
               "id":"slick_image",
               "label":"Slick Image"
            },
{
			"type" : "text",
			"id" : "slick_title",
			"label" : "slick title"
		},
{
			"type" : "text",
			"id" : "slick_description",
			"label" : "slick description"
		}
           
         ]
      }
   ],
"presets" : [
	 {
         "name":"Qt Study",
         "category":"Study"
      }
]
  }
{% endschema %}


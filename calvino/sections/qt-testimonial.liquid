<section class="">
  <div class="testimonial_main">
    <div class="container">
      <div class="row testimonial__content">
        <div class="col-xl-8 custom__padding--all">
          <div class="main__swiper--content testimonial__swiper">
            <div class="slick-list draggable">
              <div class="testimonial-carousel slick-carousel">
                {% for i in section.blocks %}
                <div class="swiper__caption">
                  <div class="swiper__caption--top">
                    <img src="{{i.settings.testimonial_image | img_url: 'master'}}"  alt="{{i.settings.testimonial_image.alt}}"/>
                    <p>{{i.settings.testi_title}}</p>
                  </div>
                  <div class="testimonial-founder">
                    <div class="testimonial-founder-image">
                      <span>{{i.settings.testi_author_title}}</span>
                    </div>
                  </div>
                </div>             
                {% endfor %}
              </div>
            </div>

            <!-- pagination dots -->
            <div class="swiper-pagination"></div>
            <!-- !pagination dots -->
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


{% schema %}
 {
   "name":"Testimonial",
   "settings":[
      
   ],
   "blocks":[
      {
         "name":"Testimonial Section",
		 "type":"text",
         "settings":[
            {
               "type":"text",
               "id":"testi_title",
               "label":"Testimonial TItle"
            },
            {
               "type":"image_picker",
               "id":"testimonial_image",
               "label":"Testimonial Text"
            },
            {
               "type":"text",
               "id":"testi_author_title",
               "label":"Testimonial Name"
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"Testimonial",
         "category":"Testimonial"
      }
   ]
}
{% endschema %}


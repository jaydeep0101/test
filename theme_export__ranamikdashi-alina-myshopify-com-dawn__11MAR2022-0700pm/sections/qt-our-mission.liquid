<section class="ourmision">
  <div class="philosophy">
    <div class="container">
      <div class="philosophy__inner">
        <div class="ourmission__title">
          <h2 class="common__hedding">{{section.settings.ourmission_title}}</h2>
        </div>
        <div class="ourmission__boxes">
        	<div class="row">
          <div class="col-lg-6 col-12  col-md-6">
            <div class="ourmission__box">
              <div class = "ourmission__box--image">
              	<img src="{{section.settings.ourmission_image_first | img_url: "master"}}" alt="{{section.settings.ourmission_image_first.alt}}" />
              </div>
              <div class="ourmission__box--title">
                <h2>{{section.settings.ourmission_title_first}}</h2>

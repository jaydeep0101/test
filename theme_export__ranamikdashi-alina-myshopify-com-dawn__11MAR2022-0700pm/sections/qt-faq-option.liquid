<section>
  <div class="faq">
    <div class="container">
      <div class="accordion">
  	<h2 class=" common__hedding">Frequently Asked Questions</h2>
  	{% for block in section.blocks %}
        <div class="accordion__item">
          <button class="accordion__btn">
      
            <span class="accordion__caption form__label">{{block.settings.faq_title}}</span>
            <span class="accordion__icon"><i class="fa fa-plus"></i></span>
          </button>
      
          <div class="accordion__content ">
            <p class="faq__heading--title">{{block.settings.faq_description}}</p>
          </div>
        </div>
  {% endfor %}
      </div>
    </div>
  </div>
</section>

{% schema %}
{
   "name":"QT FAQ Options",
   "blocks":[
      {
         "name":"QT FAQ Options",
         "type":"custom",
         "settings":[
            {
               "type":"textarea",
               "id":"faq_description",
               "label":"FAQ Description"
            },
            {
               "type":"text",
               "id":"faq_title",
               "label":"FAQ TItle"
            }
         ]
      }
   ],
   "presets":[
      {
         "name":"QT FAQ Options",
         "category":"QT FAQ Options"
      }
   ]
}
{% endschema %}


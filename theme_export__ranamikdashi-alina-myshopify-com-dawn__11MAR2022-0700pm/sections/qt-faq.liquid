<section class="faq_desktop">
  <div class="faq">
    <div class="faq__container">
      <div class="faq__inner">
        
        
        <div class="faq__items">
          <div class="row ">
            {% for block in section.blocks %}
            <div class="col-3 ">
              <div class="faq__items--border-roted">
              <div class="faq__items--box">
                <a class="faq__items--box-image">
                	<img src="{{block.settings.faq_bg_image | img_url: "master"}}">
                </a>
                <div class="simple__faq--text">
                <h2>{{block.settings.faq_title}}</h2>
                  <div class="faq_button">
                <a href="#" class="common__hedding">{{block.settings.faq_learn_more}}</a>
                  </div>
              </div>
              </div>
              </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="faq_mobile">
  <div class="faq">
    <div class="faq__container">
      <div class="faq__inner">
        <div class="faq__items">
          <div class="row faqSwiper">
            <div class="swiper-wrapper">
            {% for block in section.blocks %}
            <div class="col-3 swiper-slide">
              <div class="faq__items--box">
                <a class="faq__items--box-image">
                	<img src="{{block.settings.faq_bg_image | img_url: "master"}}">
                </a>
                <div class="simple__faq--text">
                <h2>{{block.settings.faq_title}}</h2>
                  <div class="faq_button">
                <a href="#" class="common__heading">{{block.settings.faq_learn_more}}</a>
                  </div>
              </div>
              </div>
            </div>
            {% endfor %}
            </div>
            <div class="swiper-pagination" style="position: relative;"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


			{
			"type" : "image_picker",
			"id" : "faq_bg_image",
			"label" : "FAQ Image"
			},
			{
				"type" : "text",
				"id" : "faq_title",
				"label" : "FAQ TItle"
			},
			{
				"type" : "text",
				"id" : "faq_learn_more",
				"label" : "FAQ Learn More"
			}
		]	
	}
	],
	"presets":[
		{
			"name" : "QT FAQ",
			"category":"QT FAQ"
		}
	]
  }

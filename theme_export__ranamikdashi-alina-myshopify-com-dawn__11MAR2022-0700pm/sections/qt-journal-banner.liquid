<section>
  <div class="journal">
    <div class="journal__inner">
      <dv class="row">
        <div class="col-lg-8 col-md-12 col-12 journal__hide">
          <div class="journal__banner">
            
        	<img src="{{section.settings.journal_banner_image | img_url : "master"}}" alt="{{section.settings.journal_banner_image.alt}}">
          </div>
        </div>
        <div class="col-lg-4 col-md-12 col-12">
          <div class="journal__banner--box">
            <h2>{{section.settings.journal_name_tag}}</h2>
          </div>
        </div>
      </dv>
          
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Journal Banner",
    "settings": [
	{
		"type" : "image_picker",
		"id": "journal_banner_image",
		"label": "Journal Banner Image"
	},
	{
		"type" : "text",
		"id" : "journal_name_tag",
		"label" : "Journal Name"
	}
],
"presets" : [
	{
	"name" : "Journal Banner",
	"category" : "Journal Banner"
}
]
  }
{% endschema %}


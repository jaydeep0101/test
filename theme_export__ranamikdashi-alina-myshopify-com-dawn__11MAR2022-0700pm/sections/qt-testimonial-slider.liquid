<!-- Simplest Slider -->

<section class="">
  <div class="testimonial">
    <div class="testimonial__container">
      <div class="testimonial__inner">
        <div class="testimonial__items">
          <div class="row testimonial__swiper swiper mySwiper">
            <div class="swiper-wrapper">
              {% for block in section.blocks %}
              <div class="col-12 swiper-slide">
                
                <div class="testimonial__box">
                  <div class="testimonial__box--title">
                    <h2>{{block.settings.testimonial_title}}</h2>
                  </div>
                  <div class="testimonial__box--text">
                    <p>{{block.settings.testimonial_text}}</p>
                  </div>
                  <div class="testimonial__box--name">
                    <h2>{{block.settings.testimonial_name}}</h2>
                  </div>
                </div>
                
              </div>
              {% endfor %}
            </div>
            <div class="swiper-pagination" style="position: relative; 	padding-top:30px; padding-bottom:67px;     background: var(--primary);"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


 





















